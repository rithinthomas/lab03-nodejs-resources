<%- include('header'); -%>
    <div class="content">
        <h1>Selected articles</h1>
        <table id="article">
            <tbody>
                <tr>
                    <th scope = "row">
                        NAME
                    </th>
                    <td>
                        <%=products.name%>
                    </td>
                </tr>

                <tr>
                    <th scope = "row">
                        CATEGORY
                    </th>
                    <td>
                        <%=products.category%>
                    </td>
                </tr>

                <tr>
                    <th scope = "row">
                        REFERENCE
                    </th>
                    <td>
                        <%=products.reference%>
                    </td>
                </tr>

                <tr>
                    <th scope = "row">
                        PRICE
                    </th>
                    <td>
                        AED <%=products.price%>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
<%- include('footer'); -%>